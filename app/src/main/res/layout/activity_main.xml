<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.gpa_shresthaa1_calculator.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true" >

    <!-- Header of App  -->

        <TextView
            android:text="GPA Calculator"
            android:textSize="20dp"
            android:id="@+id/main_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textColor="#FF000000" />


        <!-- Courses Title -->
        <TextView
            android:id="@+id/courses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignTop="@+id/main_activity"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="21dp"
            android:text="Courses"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="20dp" />



        <!-- Percentage Title -->

        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_activity"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="-229dp"
            android:layout_toStartOf="@+id/textView6"
            android:text="Percentage"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="20dp" />


        <!-- Course 1 -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/main_activity"
            android:text="Course 1"
            android:textColor="#000000"
            android:textSize="18dp" />


        <!-- Percentage of Course 1 -->
        <EditText
            android:id="@+id/course1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="19dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:ems="5"
            android:inputType="numberDecimal"
            android:textColor="#FF000000" />


        <!-- Courses 2 -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"
            android:text="Course 2"
            android:textColor="#FF000000"
            android:textSize="18dp" />


        <!-- Percentage of Course 2 -->
        <EditText
            android:id="@+id/course2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignStart="@+id/course1"
            android:layout_alignLeft="@+id/course1"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="18dp"
            android:ems="5"
            android:inputType="numberDecimal"
            android:textColor="#FF000000" />


        <!-- Course 3 -->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:text="Course 3"
            android:textColor="#FF000000"
            android:textSize="18dp" />


        <!-- Percentage of Course 3 -->
        <EditText
            android:id="@+id/course3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignStart="@+id/course1"
            android:layout_alignLeft="@+id/course1"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="18dp"
            android:ems="5"
            android:inputType="numberDecimal"
            android:textColor="#FF000000" />


        <!-- Course 4 -->

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:text="Course 4"
            android:textColor="#FF000000"
            android:textSize="18dp" />


        <!-- Percentage of Course 4 -->
        <EditText
            android:id="@+id/course4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignStart="@+id/course1"
            android:layout_alignLeft="@+id/course1"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="18dp"
            android:ems="5"
            android:textColor="#FF000000"
            android:inputType="numberDecimal" />



        <!-- Course 5 -->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:text="Course 5"
            android:textColor="#FF000000"
            android:textSize="18dp" />


        <!-- Percentage of Course 5 -->
        <EditText
            android:id="@+id/course5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignStart="@+id/course1"
            android:layout_alignLeft="@+id/course1"
            android:layout_alignBottom="@+id/textView5"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="18dp"
            android:ems="5"
            android:textColor="#FF000000"
            android:inputType="numberDecimal" />


        <Button
            android:id="@+id/compute_gpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course5"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@color/purple_500"
            android:text="Compute GPA"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <!-- GPA Title -->
        <TextView
            android:text="GPA :"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/compute_gpa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            android:textColor="#FF000000"
            android:id="@+id/gpa" />


        <!-- Your Calculated GPA will be here -->
        <EditText
            android:id="@+id/gpaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/compute_gpa"
            android:layout_alignStart="@+id/gpa"
            android:layout_alignLeft="@+id/gpa"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="20dp"
            android:ems="9"
            android:textColor="#FF000000"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/errorText"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/course5"/>

    </RelativeLayout>
</ScrollView>